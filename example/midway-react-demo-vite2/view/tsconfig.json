{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": false,
    "strict": false,
    "noEmit": true,
    "baseUrl": "./",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "../*"
      ],
      "_build/*": [
        "../build/*"
      ]
    }
  },
  "include": [
    "."
  ]
}
